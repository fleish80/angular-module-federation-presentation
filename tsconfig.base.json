{
  "compilerOptions": {
    "importHelpers": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "baseUrl": ".",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@angular-module-federation-presentation/shared-data": [
        "libs/src/index.ts"
      ],
      "remote/Routes": ["apps/remote/src/app/remote-entry/entry.routes.ts"]
    }
  }
}
